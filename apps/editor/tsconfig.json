{
  "extends": "@walless/tsconfig/application.json",
  "include": [
    "src",
    "index*.js",
		"../../globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2015",
      "WebWorker"
    ],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "stacks/*": [
        "./src/stacks/*"
      ],
      "screens/*": [
        "./src/screens/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "state/*": [
        "./src/state/*"
      ]
    }
  }
}
